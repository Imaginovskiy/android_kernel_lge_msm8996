config TUSB422
	bool "Enable TUSB422 USB Power Delivery"
	default n

config TUSB422_PAL
	bool "Enable TUSB422 Platform Abstraction Layer"
	default n
	depends on TUSB422

config USB_TUSB422
	bool "Enable TUSB422 USB Power Delivery"
	select TUSB422

config USB_TUSB422_PAL
	bool "Enable TUSB422 Platform Abstraction Layer"
	depends on USB_TUSB422
	select TUSB422_PAL
